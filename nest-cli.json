{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "app": {
      "type": "library",
      "root": "./",
      "entryFile": "index",
      "sourceRoot": "./src",
      "compilerOptions": {
        "tsConfigPath": "./tsconfig.lib.json"
      }
    }
  }
}